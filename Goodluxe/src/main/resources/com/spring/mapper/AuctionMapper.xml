	<insert id="insertAuction" parameterType="com.spring.goodluxe.jj.AuctionVO">
	<selectKey order="BEFORE" keyProperty="AUCTION_POST_NUMBER" resultType="int">
       SELECT NVL(MAX(TO_NUMBER(AUCTION_POST_NUMBER)),0)+1 
       FROM GL_AUCTION
       
      </selectKey>
		INSERT INTO GL_AUCTION VALUES(
		#{AUCTION_POST_NUMBER},
		#{AUCTION_MD_NAME},
		#{AUCTION_START_PRICE},
		#{AUCTION_NOW_PRICE},
		SYSTIMESTAMP,
		0,
		SYSDATE,
		#{AUCTION_START_TIME},
		#{AUCTION_END_TIME},
		#{AUCTION_PHOTO1_STORED},
		#{AUCTION_PHOTO2_STORED},
		#{AUCTION_PHOTO3_STORED},
		#{AUCTION_PHOTO4_STORED},
		#{AUCTION_PHOTO5_STORED},
		#{AUCTION_DETAIL},
		0,
		#{AUCTION_POST_STATUS},
		#{ENTITY_NUMBER}
		)
	</insert>
		
		
	
	
	<select id="selectAuction" parameterType="com.spring.goodluxe.jj.AuctionVO" resultMap="resultAuctionVO">
		SELECT * FROM GL_AUCTION WHERE AUCTION_POST_NUMBER=#{AUCTION_POST_NUMBER}
	</select>
	
